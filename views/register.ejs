<!doctype html>
<html lang="en">
    <%- include('partials/headr') %>
<body class="text-center">
    <main class="form-signin text-center shadow-lg p-3 mb-5">
        <form action="/register" method="POST">
            <img class="mb-4" src="imagen/1156718-e-finance-payment-icon.svg" alt="" width="100" height="70">
            <div class="card-header btn-bd-primary  text-white"><i class="bi bi-person-plus-fill"></i> Registrarse</div><hr>
            <div class="form-floating">
                <input id="user" name="user" type="text" class="form-control" aria-describedby="emailHelp">
                <label for="user" class="form-label">Nombre completo</label>
            </div>
            <div class="form-floating">
                <input id="email" name="email" type="email" class="form-control">
                <label for="email" class="form-label">Cuenta de correo</label>
            </div>
            <div class="form-floating">
                <input id="pass" name="pass" type="password" class="form-control">
                <label for="pass" class="form-label">Password</label>
            </div>
            <div class="row card-footer bg-transparent">
                <div class="col-md-6 col-6">
                    <button type="submit" class="w-100 btn btn-md btn-bd-primary"><i class="bi bi-person-vcard"></i> Registrar</button>
                </div>
                <div class="col-md-6 col-6">
                    <a href="/" type="button" class="w-100 btn btn-md btn-bd-danger"><i class="bi bi-file-excel"></i> Cancelar</a>
                </div>
            </div>
        </form>
    </main>
    <%- include('partials/boost') %>
</body>
</html>